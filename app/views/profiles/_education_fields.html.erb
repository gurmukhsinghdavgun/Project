<div class="nested-fields">
  <%= f.label :university %><br>
  <%= f.text_field :university %><br>

  <div class="field">
    <label for="willingToRelocate">Are you willing to relocate?</label>
    <%= f.select :degreetype, ['Bachelor Degree', 'Masters Degree', 'PhD'], {}, :class => 'form-control' %>
  </div>

  <%= f.label :course %><br>
  <%= f.text_field :course %><br>

  <%= f.label :level %><br>
  <%= f.select :level, ['1st','2.1','2.2','3rd'] %><br>

  <%= f.label :finishdate %><br>
  <%= f.date_select :finishdate, :order => [:day, :month, :year] %><br>

  <%= link_to_remove_association "remove education", f %>
</div>
