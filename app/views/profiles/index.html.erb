<p id="notice"><%= notice %></p>

<div class="">
  <%= search_form_for @search do |f| %>
    <%= f.label "Search for skill" %><br>
    <%= f.text_field :bio_cont, class: "form", placeholder: "Search for skill" %>
    <br>
    <%= f.label "Area of Expertise" %><br>
    <%= f.collection_check_boxes :expertises_id_in_any, Expertise.all, :id, :name do |b| %>
      <%= b.check_box %>
      <%= b.label %>
    <% end %><br>

    <%= f.label "Find developer in which city" %><br>
    <%= f.collection_check_boxes :cities_id_in_any, City.all, :id, :name do |b| %>
      <%= b.check_box %>
      <%= b.label %>
    <% end %><br>

    <%= f.submit "Search" %>
  <% end %>
</div>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Bio</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.bio %></td>
        <td><%= profile.user.email %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

