<div class="headerindex">
  <h1>Find your next developer</h1>

  <div class="searchform data-no-turbolink">
    <%= search_form_for @search do |f|%>
      <div class="field">
          <div class="input-group col-md-12">
            <%= f.text_field :bio_cont, class: "form-control input-lg skillbar custom", placeholder: "search for a skill e.g. Ruby Developer" %>
          </div>
      </div><br>
      <div class="field">
        <div class="input-group col-md-12">
          <%= f.text_field :experiance_gt, class: "form-control input-lg noexperiancebar custom", placeholder: "Mimimum years of experiance e.g. 2 Years" %>
        </div>
      </div>
      <div class="aofexpertise">
        <%= f.label "Area of Expertise" %><br>
        <%= f.collection_check_boxes :expertises_id_in_any, Expertise.all, :id, :name do |b| %>
          <div class="collection_check_boxes">
            <%= b.check_box %>
            <%= b.label %>
          </div>
        <% end %>
      </div><br>
      <div class="aofcity">
        <%= f.label "City searching for developer " %><br>
        <%= f.collection_check_boxes :cities_id_in_any, City.all, :id, :name do |b| %>
          <div class="collection_check_boxes">
            <%= b.check_box %>
            <%= b.label %>
          </div>
        <% end %>
      </div>
      <div class="actions">
        <%= f.submit "Search" %>
      </div>
    <% end %>
  </div>

</div>



<div class="profilefull">
  <div class="profilescontainer">
    <% @profiles.each do |profile| %>
      <div class="eachprofile">
        <aside class="profile-card">
          <header>
            <%= link_to profile do %>
              <%= image_tag profile.image.url(:medium) %>
            <% end %>
            <h1><%= profile.name %></h1>
            <h2>WEB DESIGNER</h2>
          </header>
          <div class="profile-bio">
            <p>"<%= profile.shortbio %>"</p>
          </div>
        </aside>
      </div>
    <% end %>
  </div>
</div>
