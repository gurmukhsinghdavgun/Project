<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :bio %><br>
    <%= f.text_field :bio %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div><br>

  <div class="field">
    <%= f.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= f.text_field :all_skills, placeholder: "Seperate with comma" %>
  </div>

  <div class="field">
    <%= f.radio_button :experiance, '1-2 Years' %>
    <%= f.radio_button :experiance, '2-3 Years' %>
    <%= f.radio_button :experiance, '3-4 Years' %>
    <%= f.radio_button :experiance, '5-6 Years' %>
    <%= f.radio_button :experiance, '6+ Years' %>
  </div>

  <div class="field">
    <%= f.label :willingToRelocate %>
    <%= f.select :willingToRelocate, ['Yes', 'No'] %>
  </div>

  <div class="field">
    <%= f.label :salary %>
    <%= f.text_field :salary %>
  </div>

  <div class="field">
    <%= f.label :TwitterLink %><br>
    <%= f.text_field :TwitterLink %>
  </div>
  <div class="field">
    <%= f.label :GithubLink %><br>
    <%= f.text_field :GithubLink %>
  </div>
  <div class="field">
    <%= f.label :StackLink %><br>
    <%= f.text_field :StackLink %>
  </div>
  <div class="field">
    <%= f.label :DribbbleLink %><br>
    <%= f.text_field :DribbbleLink %>
  </div>
  <div class="field">
    <%= f.label :MediumLink %><br>
    <%= f.text_field :MediumLink %>
  </div>

  <div class="field">
    <%= f.label :workAbroad %>
    <%= f.select :workAbroad, ['Yes', 'No'] %>
  </div>

  <div id="educations">
    <%= f.fields_for :educations do |education| %>
      <%= render 'education_fields', f: education %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add education', f, :educations %>
    </div>
  </div>

  <br>
  <br>

  <div class="field">
    <%= f.fields_for :portfolios do |portfolio| %>
      <%= render partial: 'portfolio_fields', :f => portfolio  %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add image', f, :portfolios %>
    </div>
  </div>

  <div class="works">
    <%= f.fields_for :works do |work| %>
      <%= render 'work_fields', f: work %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add work experiance', f, :works %>
    </div>
  </div>

  <div class="field">
    <%= f.label "Area of Expertise" %><br>
    <%= f.collection_check_boxes :expertise_ids, Expertise.all, :id, :name do |b| %>
      <div class="collection_check_boxe">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "Cities you will to work in" %>
    <%= f.collection_check_boxes :city_ids, City.all, :id, :name do |c| %>
      <div class="collection_check_boxe">
        <%= c.check_box %>
        <%= c.label %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
